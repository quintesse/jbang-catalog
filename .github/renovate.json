{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.java/"
      ],
      "matchStrings": [
        "//DEPS (?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(\\${.+:(?<currentValue>[^ }]+)})",
        "//DEPS ((?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(?<currentValue>[^ $:@].+))(\\@\\w+)?"
      ],
      "datasourceTemplate": "maven"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.?jbang-catalog.json/"
      ],
      "matchStrings": [
        "\"(?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(\\${.+:(?<currentValue>[^ }]+)})\"",
        "\"((?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(?<currentValue>[^ $:@].+))(\\@\\w+)?\""
      ],
      "datasourceTemplate": "maven"
    }
  ]
}
