{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": "\\.java",
      "matchStrings": [
        "//DEPS (?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(\\${.+:(?<currentValue>[^ }]+)})",
        "//DEPS ((?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(?<currentValue>[^ $:@].+))(\\@\\w+)?"
      ],
      "datasourceTemplate": "maven"
    },
    {
      "fileMatch": ".?jbang-catalog.json",
      "matchStrings": [
        "\"(?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(\\${.+:(?<currentValue>[^ }]+)})\"",
        "\"((?<depName>[a-zA-Z0-9_.-]+:[a-zA-Z0-9_.-]+):(?<currentValue>[^ $:@].+))(\\@\\w+)?\""
      ],
      "datasourceTemplate": "maven"
    }
  ]
}
